{
    "comments": {
        "lineComment": "--"
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],

    "folding": {
        "markers": {
            "start": "^((ROUTINE|PROGRAM|IF|FOR|SELECT|STRUCTURE|USING) +(\\w+))|(CONDITION( *\\[{1} *)\\d+( *\\]{1} *:{1}))|(\\.form)", 
            "end": "^((END +(\\w)+ *)|(ENDFOR|ENDIF|ENDSELECT|ENDCONDITION|ENDSTRUCTURE|ENDUSING|\\.endform) *)"
        },
        "offSide": true
    }
    
}